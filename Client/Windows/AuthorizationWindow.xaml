<Window x:Class="Client.Windows.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Windows"
        mc:Ignorable="d"
        Title="Вход" Height="300" Width="465" ResizeMode="NoResize"
        Closing="AuthorizationWindow_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Введите имя для входа в чат" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="18"/>
        <TextBox x:Name="textBoxAuthName" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Width="150" FontSize="15"/>
        <Button Grid.Row="2" Content="Продолжить" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="14" Padding="5" Click="Button_Click"/>
    </Grid>
</Window>
